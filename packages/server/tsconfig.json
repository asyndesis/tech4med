{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true
  },

  "include": ["src/**/*", "src/_generated/**/*"],
  "exclude": ["node_modules"]
}
